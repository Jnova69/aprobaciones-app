FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .

RUN npm run build

FROM node:20-alpine AS builder

WORKDIR /app

COPY package*.json ./

RUN npm ci

COPY . .

RUN npm run build

RUN mkdir -p dist/modules/email/templates && \
    cp -r src/modules/email/templates/* dist/modules/email/templates/ 2>/dev/null || true

FROM node:20-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --only=production

COPY --from=builder /app/dist ./dist

COPY --from=builder /app/src/modules/email/templates ./dist/modules/email/templates

EXPOSE 3000

CMD ["node", "dist/main"]